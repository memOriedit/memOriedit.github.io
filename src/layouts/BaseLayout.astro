---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title, 
  description = "消したい記憶はありますか。記憶を覗き、想いを暴き、苦悩に向き合うカウンセリングアドベンチャー「memOriedit」。依頼者の悩みを解決するのか、冷静に職務を全うするのか、決定権は常にあなたにあります。", 
  image = "/images/key-visual.png",
  type = "website"
} = Astro.props;

const siteUrl = "https://memoriedit.github.io";
const fullImageUrl = new URL(image, siteUrl).toString();
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="R2MKHnZrjePCx1lDZDYuwTua2v6G_A6Mhf615Si8mSQ" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:alt" content="memOriedit - 記憶を消去する店「おもいでや」のカウンセリングアドベンチャーゲーム" />
    <meta property="og:site_name" content="memOriedit" />
    <meta property="og:locale" content="ja_JP" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImageUrl} />
    <meta property="twitter:image:alt" content="memOriedit - 記憶を消去する店「おもいでや」のカウンセリングアドベンチャーゲーム" />
    
    <!-- Additional SEO -->
    <meta name="keywords" content="memOriedit,おもいでや,記憶消去,アドベンチャーゲーム,カウンセリング,インディーゲーム,Steam" />
    <meta name="author" content="memOriedit" />
    <link rel="canonical" href={Astro.url} />
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Performance optimizations -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap"></noscript>
    
    <!-- Performance hints -->
    <meta name="theme-color" content="#0a0a0a">
    <meta name="color-scheme" content="dark">
    <meta name="format-detection" content="telephone=no">
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'DotGothic16', monospace;
    background: #0a0a0a;
    color: #e0e0e0;
  }

  body {
    min-height: 100vh;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%);
    line-height: 1.6;
  }

  /* Dark and gloomy theme colors */
  :root {
    --bg-primary: #0a0a0a;
    --bg-secondary: #1a1a1a;
    --bg-tertiary: #2a2a2a;
    --text-primary: #e0e0e0;
    --text-secondary: #b0b0b0;
    --text-muted: #808080;
    --accent-blue: #1e40af;
    --accent-blue-hover: #3b82f6;
    --border-color: #333333;
    --shadow-dark: rgba(0, 0, 0, 0.8);
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    color: var(--text-primary);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    text-shadow: 2px 2px 4px var(--shadow-dark);
  }

  h2 {
    font-size: 2rem;
    text-shadow: 1px 1px 2px var(--shadow-dark);
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--accent-blue);
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn:hover {
    background: var(--accent-blue);
    border-color: var(--accent-blue);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px var(--shadow-dark);
  }

  .btn-primary {
    background: var(--accent-blue);
    border-color: var(--accent-blue);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-blue-hover);
    border-color: var(--accent-blue-hover);
  }

  /* Cards */
  .card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 8px var(--shadow-dark);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px var(--shadow-dark);
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Section spacing */
  .section {
    padding: 4rem 0;
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--bg-primary);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--bg-tertiary);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--accent-blue);
  }
</style>
